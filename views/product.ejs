<% title = 'Card' %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://kit.fontawesome.com/004ce8372e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/common.css">
    <link rel="shortcut icon" href="#">
</head>

<body>
    <header>
        <%- include('partials/header.html') %>
    </header>

    <main>
            <div class="container" id="product-details">
                <div class="row">
                    <div class="col-md-6">
                        <img src="<%= product.imageUrl %>" alt="<%= product.name %>" class="product-image">
                    </div>
                    <div class="col-md-6">
                        <h2 class="product-name"><%= product.name %></h2>
                        <p class="product-description"><%= product.description2 %></p>

                        <!-- Customization Options -->
                        <% if (product.customizationOptions) { %>
                            <h6 class="customization-heading">Customization Options:</h6>
                            <ul class="customization-options">
                                <% if (product.customizationOptions.message) { %>
                                    <li><%= product.customizationOptions.message %></li>
                                <% } %>
                                <% if (product.customizationOptions.envelopeColor) { %>
                                    <li><%= product.customizationOptions.envelopeColor %></li>
                                <% } %>
                                <% if (product.customizationOptions.addPhoto) { %>
                                    <li><%= product.customizationOptions.addPhoto %></li>
                                <% } %>
                            </ul>
                        <% } %>

                        <p class="product-price">Price: $<%= product.price.toFixed(2) %></p>
                        <button class="btn btn-primary add-to-cart-button">Add to Cart</button>
                    </div>
                </div>
            </div>
    </main>

    <footer>
        <%- include('partials/footer.html') %>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
