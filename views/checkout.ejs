<% title = 'Checkout' %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://kit.fontawesome.com/004ce8372e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/checkout.css">
    <link rel="shortcut icon" href="#">
</head>

<body>
    <header>
        <%- include('partials/header.html') %>
    </header>

    <main>
        <div class="container">
            <h2>Checkout</h2>
            <% if (!loggedIn) { %>
                <p>If you're not logged in, <a href="/signin">sign in or sign up</a> to complete your purchase.</p>
            <% } %>
            
            <!-- Shipping and Contact Details Section -->
            <div class="user-details">
                <% if (loggedIn) { %>
                    <!-- Display user's shipping and contact details here -->
                    <!-- You can use the data from the server to populate the fields -->
                    <!-- Add the ability for users to modify these details -->
                <% } else { %>
                    <!-- Guest Checkout - Collect mandatory fields -->
                    <form id="guestCheckoutForm">
                        <!-- Add fields for shipping and contact details -->
                        <!-- Example: -->
                        <div class="form-group">
                            <label for="guestName">Full Name*</label>
                            <input type="text" class="form-control" id="guestName" required>
                        </div>
                        <div class="form-group">
                            <label for="guestEmail">Email Address*</label>
                            <input type="email" class="form-control" id="guestEmail" required>
                        </div>
                        <!-- Add more fields as needed -->
                        
                        <button class="btn btn-success" id="guestCheckoutButton">Make an Order</button>
                    </form>
                <% } %>
            </div>
            
            <!-- Cart Summary Section -->
            <h3>Cart Summary</h3>
            <!-- Display the scrollable list of items in the cart here (similar to your cart page) -->
            
        </div>
    </main>

    <footer>
        <%- include('partials/footer.html') %>
    </footer>

    <!-- Include necessary JavaScript libraries here -->
    <!-- You'll need JavaScript to handle user interactions and form submissions -->

</body>
</html>
